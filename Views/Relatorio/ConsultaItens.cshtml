@model ItemViewModel
@{
    ViewData["Title"] = "RelatorioCRC";
    Layout = "_Layout";
}

<form asp-controller="Relatorio" asp-action="ConsultaItens" method="post" class="form-horizontal">
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title font-weight-bold m-1">Área de consulta</h1>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-1">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary p-0 my-0 mr-2"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                        </div>
                        <div class="justify-content-center col-sm-10">
                            <h3 class="font-weight-bold my-1 section-title text-center">Consulta de Itens</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-4">
                            <label class="control-label">Descrição do Item</label>
                            <input type="text" asp-for="itemCatalogo.DescricaoBasica" class="form-control" />
                        </div>
                        <div class="form-group col-sm-6 col-md-4">
                            <label class="control-label">Número da Ata</label>
                            <input type="text" asp-for="ObjAta.CodigoAta" class="form-control" />
                        </div>
                        <div class="form-group col-sm-6 col-md-4">
                            <label class="control-label">Ano da Ata</label>
                            <input type="text" asp-for="ObjAta.Ano" class="form-control" />
                        </div>
                        <div class="form-group col-sm-6 col-md-4">
                            <label class="control-label">Vigência</label>
                            <input asp-for="ObjAta.DataFinalVigencia" id="DataVigencia" class="form-control" />
                        </div>

                        <div class="checkbox pt-5 ml-5 mt-5">
                            <label>
                                <input type="checkbox" name="adesao" value="true"><span class="checkbox-material"><span class="check"></span></span> Disponibilidade de Adesão
                            </label>
                        </div>

                    </div>
                    <div class="row justify-content-end mr-5">
                        <input type="submit" class="btn btn-raised btn-primary" value="Efetuar Consulta" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<div class="card card-primary m-3">
    <div class="card-header">
        <h3 class="card-title font-weight-bold m-1 text-center">Resultados da Consulta</h3>
    </div>
    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr class="row m-0 justify-content-center align-items-center">
                <th class="col-2 border-top-0 border-bottom-0">Descrição do item</th>
                <th class="col-2 border-top-0 border-bottom-0">Número da Ata</th>
                <th class="col-2 border-top-0 border-bottom-0">Ano da Ata</th>
                <th class="col-2 border-top-0 border-bottom-0">Limite de adesão</th>
                <th class="col-2 border-top-0 border-bottom-0">Quantidade adesão disponivel</th>
                <th class="col-2 border-top-0 border-bottom-0">Visualizar</th>
            </tr>
        </thead>
        <tbody>
            <tr class="row m-0 justify-content-center align-items-center">
                <td class="col-2 border-0">Equipamento de segurança eletrônica</td>
                <td class="col-2 border-0">234</td>
                <td class="col-2 border-0">2018</td>
                <td class="col-2 border-0">100%</td>
                <td class="col-2 border-0">30%</td>
                <td class="col-2 border-0">Inserir Icone aqui</td>
            </tr>
            <tr class="row m-0 justify-content-center align-items-center">
                <td class="col-2 border-0">Equipamento de Limpeza</td>
                <td class="col-2 border-0">222</td>
                <td class="col-2 border-0">2010</td>
                <td class="col-2 border-0">80%</td>
                <td class="col-2 border-0">40%</td>
                <td class="col-2 border-0">Inserir Icone aqui com referencia a visualização da Ata</td>
            </tr>
        </tbody>
    </table>
    <div class="col-lg-6 row aligncenter">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="javascript:void(0)">1</a></li>
                <li class="page-item"><a class="page-link" href="javascript:void(0)">2</a></li>
                <li class="page-item"><a class="page-link" href="javascript:void(0)">3</a></li>
                <li class="page-item disabled"><a class="page-link" href="javascript:void(0)">4</a></li>
                <li class="page-item"><a class="page-link" href="javascript:void(0)">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
@section Scripts {
    <script src="~/js/ConsultaItems.js"></script>
}
